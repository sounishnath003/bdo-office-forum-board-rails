
  <div class="max-w-5xl mt-8 m-auto p-8">
        <div class="text-indigo-600 p-2">
          <h1>Galleries</h1>
        </div>

      <% if user_signed_in? && current_user.admin == true %>
            <div class="col-sm-6 text-right">
            <%= link_to admin_galleries_path, class: 'btn btn-primary' do %>
              Add New Gallery
            <% end %>
            </div>
          </div>
      <% end  %>


        <div class="container my-12 mx-auto px-4 md:px-12">
            <div class="flex flex-wrap -mx-1 lg:-mx-4">
              <% @galleries.each do |gallery| %>
                <%= content_tag :tr, id: dom_id(gallery), class: dom_class(gallery) do %> 
                <!-- Column -->
                <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">

                    <!-- Article -->
                    <article class="overflow-hidden hover:bg-gray-100 mt-8 md:mr-3 rounded-lg shadow">

                        <a href="#">
                             <%= image_tag gallery.photo_url , class: "bloch h-auto w-auto m-auto object-fit" %>
                        </a>

                        <header class="flex items-center justify-between leading-tight p-3 md:p-4">
                            <p class="text-grey-darker text-sm">
                                <%= gallery.created_at.to_s %>
                            </p>
                             <a class="no-underline text-red-400 m-2 hover:text-red-dark" href="#">
                                <span class="hidden">Like</span>
                                <i class="fa fa-heart"></i>
                            </a>
                        </header>

                    </article>
                    <!-- END Article -->

                </div>
                <!-- END Column -->
             <% end %>
          <% end %>
        </div>
    </div>