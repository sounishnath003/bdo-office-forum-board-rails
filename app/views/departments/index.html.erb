<div class="flex w-full flex-row justify-between p-5 md:mt-3 m-0">
  <div class="text-center"><h1 class="text-2xl">Departments</h1></div>
    <div class="text-center">
        <%= search_form_for @search do |f| %>
          <%= f.search_field :name_or_officer_name_or_designation_or_contact_matches_all , :class => "border rounded-l border-black border-2 px-12 py-2 bg-gray-100" %>
          <%= f.submit "Search", :class => "bg-indigo-600 border rounded-r m-auto p-2  text-white" %>
        <% end %>
      </div>
</div>
</div>


    <div class="px-3 w-full md:max-w-5xl m-auto  py-4 flex-col flex-wrap md:flex-row flex justify-center">
        <table class="w-full text-md bg-white shadow-xl rounded-lg mb-4">
            <tbody>
            <tr class="border-b ">
                      <th class="text-left p-3 px-5">Name</th>
                      <th class="text-left p-3 px-5">Designation</th>
                      <th class="text-left p-3 px-5">Officer name</th>
                      <th class="text-left p-3 px-5">Contact</th>
                      <th></th>
            </tr>
              <% @departments.each do |department| %>
              <%= content_tag :tr, id: dom_id(department), class: dom_class(department) do %>
                  <tr class="border-b hover:bg-orange-100 bg-gray-100">
                      <td class="p-3 mb-2 text-blue-400 px-5"><%= department.name %></td>
                      <td class="p-3 mb-2 px-5"><%= department.designation %></td>
                      <td class="p-3 mb-2 px-5"><%= department.officer_name %></td>
                      <td class="p-3 mb-2 px-5"><%= department.contact %></td>
                  </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
